<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.seagrid</groupId>
    <artifactId>seagrid-app</artifactId>
    <name>SEAGrid Rich Client</name>
    <organization>
        <name>Indiana University</name>
    </organization>

    <packaging>jar</packaging>
    <version>0.1-SNAPSHOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <slf4j.version>1.6.1</slf4j.version>
        <airavata.version>0.16-SNAPSHOT</airavata.version>
        <sign.keystore>keystore.jks</sign.keystore>
        <sign.storetype>jks</sign.storetype>
        <sign.storepass>changeit</sign.storepass>
        <sign.alias>seagrid-desktop-client</sign.alias>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <taskdef name="jfxdeploy" classname="com.sun.javafx.tools.ant.DeployFXTask" classpathref="maven.plugin.classpath" />
                                <taskdef name="jfxsignjar" classname="com.sun.javafx.tools.ant.FXSignJarTask" classpathref="maven.plugin.classpath" />

                                <jfxdeploy outdir="${project.build.directory}/jnlp"
                                           outfile="seagrid-desktop-client-jnlp"
                                           embedJNLP="true">

                                    <info title="SEAGrid Desktop Client JNLP"
                                          vendor="Indiana University"
                                          description=""/>
                                    <application name="${project.name}"
                                                 mainClass="org.seagrid.desktop.SEAGridClient" />
                                    <resources>
                                        <fileset dir="${project.build.directory}" includes="*.jar" />
                                    </resources>

                                    <permissions elevated="true"/>

                                </jfxdeploy>

                                <!-- Sign all the jars in the deploy directory -->
                                <jfxsignjar destdir="${project.build.directory}/jnlp"
                                            keyStore="${sign.keystore}"
                                            storetype="${sign.storetype}"
                                            storePass="${sign.storepass}"
                                            alias="${sign.alias}">
                                    <fileset dir="${project.build.directory}/jnlp" includes="*.jar" />
                                </jfxsignjar>

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>

                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>ant-javafx</artifactId>
                        <version>8.0</version>
                        <systemPath>${java.home}/../lib/ant-javafx.jar</systemPath>
                        <scope>system</scope>
                    </dependency>
                </dependencies>
            </plugin>

            <!--<plugin>-->
                <!--<groupId>com.zenjava</groupId>-->
                <!--<artifactId>javafx-maven-plugin</artifactId>-->
